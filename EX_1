#include <stdio.h>
#include <locale.h>

int fatorial(int n);

int main(){
	setlocale (LC_ALL, "portuguese_Brazil");
	
	int num, r;
	
	printf("digite um numero:");
	scanf ("%d", &num);
	
	r = fatorial(num);
	
	if(r == -1){
		printf("Entrada InvÃ¡lida");
	} else{
		printf("%d", fatorial(num));
	}	
}


int fatorial(int n){
	if (n == 0){
		return 1;
	}
	
	if(n > 0){
		return n * fatorial (n-1);
	}
	
	return -1;
}
